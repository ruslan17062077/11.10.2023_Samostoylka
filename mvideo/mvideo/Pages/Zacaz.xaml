<Page x:Class="mvideo.Pages.Zacaz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mvideo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zacaz">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="391*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        
            <TextBlock HorizontalAlignment="Center" Margin="5" > Список Заказов</TextBlock>
        <StackPanel Grid.Row="1" >
            <ScrollViewer>
                <WrapPanel x:Name="WrapPanel" ></WrapPanel>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock x:Name="colTb" ></TextBlock>
            <Button Click="Button_Click">Оформить</Button>
        </StackPanel>
    </Grid>

</Page>
