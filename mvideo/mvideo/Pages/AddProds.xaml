<Window x:Class="mvideo.Pages.AddProds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mvideo.Pages"
        mc:Ignorable="d"
        Title="AddProds" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="125*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" >Имя</TextBlock>
        <TextBlock Grid.Row="2">Цена</TextBlock>
        <TextBlock Grid.Row="3">Скидка</TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" ></TextBox>
        <TextBox Grid.Row="2" Grid.Column="1" ></TextBox>
        <TextBox Grid.Row="3" Grid.Column="1" ></TextBox>
        <StackPanel Grid.Row="4" Grid.Column="1" >
            <Button x:Name="dobavit">Добавить</Button>
            <Button x:Name="close">выйти</Button>
        </StackPanel>
        

    </Grid>
</Window>
